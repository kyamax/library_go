
<%= form_with model: @book, local: true do |f| %>
  <div class="field">
    <%= f.label :image, "本の表紙" %><br />
    <%= f.file_field :image, id:"book_image" %>
  </div>

  <div class="field">
    <%= f.label :book_name, "本の名前" %><br />
    <%= f.text_field :book_name, id:"book_name" %>
  </div>

  <div class="field">
    <%= f.label :author, "著者" %><br />
    <%= f.text_field :author, class: :form__text, id:"book_author" %>
  </div>

  <div class="field">
    <%= f.label :publisher, "出版社" %><br />
    <%= f.text_field :publisher, class: :form__text, id:"book_publisher" %>
  </div>

  <div class="field">
    <%= f.label :text, "感想" %><br />
    <%= f.text_area :text, class: :form__text, id:"book_text" %>
  </div>

  <div class="field">
    <%= f.label :genre_id, "ジャンル" %>
    <%= link_to "?", "#" %><br />
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"select-box", id:"book_genre"}) %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
    <%=link_to 'もどる', root_path, class:"back-btn" %>
  </div>
<% end %>
