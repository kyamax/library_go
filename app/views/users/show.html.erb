<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.name}さんの情報"%>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.name %></td>
          </tr>
          <tr>
            <th class="table__col1">学年</th>
            <td class="table__col2"><%= @user.grade.name %></td>
          </tr>
          <tr>
            <th class="table__col1">クラス</th>
            <td class="table__col2"><%= @user.class_num.name %></td>
          </tr>
          <tr>
            <th class="table__col1">番号</th>
            <td class="table__col2"><%= @user.number.name %></td>
          </tr>
        </tbody>
      </table>

      <% if user_signed_in? && current_user.id == @user.id %>
        <div class="show-btn">
          <div class="nav__right">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: :detail_nav__btn %>
            <%= link_to "編集", edit_user_registration_path(@user.id) %>
          </div>
        </div>
      <% end %>

      <div class="user-post-like">
        <h2 class="page-heading-title" id="user_book_field">
          <%= "投稿一覧" %>
        </h2>
        <h2 class="page-heading-title" id="user_like_field">
          <%= "いいね一覧"%>
        </h2>
      </div>


        <div class="user-posts">
          <div class="user__card hidden" id="user_card">
            <div class="user-book-field">
              <% @books.each do |book| %>
                <div class="user-book-item">
                  <%= link_to book_path(book.id) do %>
                    <div class="detail-book">
                      <% if book.image.present? %>
                        <%= image_tag book.image, class:"detail-book-img" %>
                      <% else %>
                        <%= image_tag "book_image.png", class:"detail-book-img" %>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <div class="user-likes">
          <div class="user__card hidden" id="user_likes">
            <% if @likes.present? %>
              <div class="user-book-field">
                <% @likes.each do |like| %>
                  <% book = like.book %>
                  <div class="user-book-item">
                    <%= link_to book_path(book.id) do %>
                    <div class="detail-book">
                      <% if book.image.present? %>
                        <%= image_tag book.image, class:"detail-book-img" %>
                      <% else %>
                        <%= image_tag "book_image.png", class:"detail-book-img" %>
                      <% end %>
                    </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="non-like">いいねをしている投稿はありません</p>
            <% end %>
          </div>
        </div>


    </div>
  </div>
</div>
