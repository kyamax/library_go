<%= form_with model: @admin, url: admin_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      登録情報入力
    </h1>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">学校名</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :school, class:"input-default", id:"school-name", placeholder:"学校名" %>
    </div>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">職員番号</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :employee_id, class:"input-default", id:"employee-id", placeholder:"職員番号" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">名前(全角)</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :name, class:"input-default", id:"user-name", placeholder:"名前" %>
    </div>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※6文字以上で設定してください</p>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  <div class="form-group">
    <div class='register-btn'>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.submit "登録する" ,class:"register-red-btn" %>
    </div>
  </div>
<% end %>