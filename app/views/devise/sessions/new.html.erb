<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      会員情報入力
    </h1>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">学年</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.collection_select(:grade_id, Grade.all, :id, :name, {}, {class:"select-box", id:"user-grade"}) %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">クラス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.collection_select(:class_num_id, ClassNum.all, :id, :name, {}, {class:"select-box", id:"user-class"}) %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">番号</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.collection_select(:number_id, Number.all, :id, :name, {}, {class:"select-box", id:"user-number"}) %>
  </div>


  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
  </div>

  <div class="form-group">
    <div class='register-btn'>
      <%= f.submit "ログイン" ,class:"register-red-btn " %>
    </div>
  </div>
</div>
<% end %>

